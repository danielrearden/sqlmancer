{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "lib",
    "declaration": true
  },
  "include": [
    "lib/**/*"
  ]
}